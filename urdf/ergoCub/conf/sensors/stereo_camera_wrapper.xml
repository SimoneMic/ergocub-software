
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">

<devices>
<device xmlns:xi="http://www.w3.org/2001/XInclude" name="RightStereoCamera" type="frameGrabber_nws_yarp">
    <param name="period">0.033</param>
    <param name="name"> ${portprefix}/rightStereoCamera </param>
    <action phase="startup" level="5" type="attach">
        <paramlist name="networks">
            <elem name="the_device"> stereoCameraRight </elem>
        </paramlist>
    </action>
    <action phase="shutdown" level="5" type="detach" />
</device>

<device xmlns:xi="http://www.w3.org/2001/XInclude" name="RightStereoCamera_nwc" type="frameGrabber_nwc_yarp">
    <param name="local">   /right_stereo_cam:i </param>
    <param name="remote">  ${portprefix}/rightStereoCamera   </param>
    <!--<param name="carrier">  fast_tcp+send.portmonitor+file.bottle_compression_zlib+recv.portmonitor+file.bottle_compression_zlib+type.dll  </param>-->
    <action phase="shutdown" level="5" type="detach" />
</device>

<device xmlns:xi="http://www.w3.org/2001/XInclude" name="LeftStereoCamera" type="frameGrabber_nws_yarp">
    <param name="period">0.033</param>
    <param name="name"> ${portprefix}/leftStereoCamera </param>
    <action phase="startup" level="5" type="attach">
        <paramlist name="networks">
            <elem name="the_device"> stereoCameraLeft </elem>
        </paramlist>
    </action>
    <action phase="shutdown" level="5" type="detach" />
</device>

</devices>